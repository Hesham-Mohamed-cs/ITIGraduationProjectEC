@model GraduaitionProjectITI.Models.Entity.ApplicationUser
@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<center>
    <div class="align-content-center">
        <div class="container">
            <div class="card rounded-4 shadow-lg" style="width: 30rem;">
                <img src="~/1.jpg" class="card-img-top rounded-5" alt="...">
                <div class="card-body">
                    <form asp-action="ConfirmDelete">
                        <input type="hidden" name="Id" value="@Model.Id"><hr>
                        <h2><b> Are you want to delete this Profile @(Model.FirstName + " " + @Model.LastName) </b></h2>

                        <div class="d-inline-flex gap-1">
                            <input type="submit" value="Delete" class="btn btn-danger btn" />
                            <a class="btn btn-primary btn" asp-action="Index" asp-controller="Profile"> Cancel </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</center>