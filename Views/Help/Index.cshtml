@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalSheet">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header border-bottom-0">
                <h1 class="modal-title fs-0"><b>Help - Leon Trade</b></h1>
            </div>
            <div class="modal-body py-0">
                <hr />
                <section>
                    <h4>How Can We Help You?</h4>

                    <p>
                        Welcome to the help page for Car Parts. We are here to provide assistance and answer any questions you may have.
                    </p>

                    <h4>Searching for Parts</h4>

                    <p>
                        If you are looking for specific parts, you can use the search bar at the top of the page. Enter the part name or part number and click the search button.
                    </p>

                    <h4>Technical Support</h4>

                    <p>
                        If you encounter a technical issue or need further assistance, please contact our technical support team at Leon.Trade@gmail.com or use the contact form on the Contact Us page.
                    </p>
                </section>
            </div>
            <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
                <a type="button" class="btn btn-outline-success" href="/home">Close</a>
            </div>
        </div>
    </div>
</div>