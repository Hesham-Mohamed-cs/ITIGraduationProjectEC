@model GraduaitionProjectITI.ViewModel.contact.ContactViewModel;
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="p-5 bg-light m-3">


    <div class="contentI m-5">

        <div class="container">
            <div class="row align-items-stretch no-gutters contact-wrap">
                <div class="col-md-6">
                    <div class="form h-100">
                        <h3 class="">Send us a message</h3>
                        <form class="mb-5 text-primary" method="post" asp-action="Send">
                            <div asp-validation-summary="All" class="text-danger row"></div>

                            <div class="row">
                                <div class="col-md-6 form-group mb-5">
                                    <label asp-for="Name" class="col-form-label"></label>
                                    <input class="form-control" asp-for="Name" placeholder="Your name">
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                                <div class="col-md-6 form-group mb-5">
                                    <label asp-for="Email" class="col-form-label "></label>
                                    <input class="form-control" asp-for="Email" placeholder="Your email">
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group mb-5">
                                    <label asp-for="Phone" class="col-form-label "></label>
                                    <input asp-for="Phone" class="form-control" placeholder="Phone #">
                                    <span asp-validation-for="Phone" class="text-danger"></span>

                                </div>
                                <div class="col-md-6 form-group mb-5">
                                    <label asp-for="Branch" class="col-form-label "></label>
                                    <input class="form-control" asp-for="Branch" placeholder="Branch Name">
                                    <span asp-validation-for="Branch" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 form-group mb-5">
                                    <label asp-for="Message" class="col-form-label "></label>
                                    <textarea class="form-control" asp-for="Message" cols="30" rows="4" placeholder="Write your message"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    <input type="submit" value="Send Message" class="btn btn-primary rounded-0 py-2 px-4">
                                    <span class="submitting"></span>
                                </div>
                            </div>
                        </form>
@* 
                        <div id="form-message-warning mt-4"></div>
                        <div id="form-message-success" class="">
                            Your message was sent, thank you!
                        </div> *@

                    </div>
                </div>
                <div class="col-md-6">
                    <a href="https://www.google.com/maps" target="_blank">

                        <div class="contact-info h-100" style="background-image : url(/ContactImages/map.jpg) !important;background-size: cover;"></div>

                    </a>
                </div>
            </div>
        </div>

    </div>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}