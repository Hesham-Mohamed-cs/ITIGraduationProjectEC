@model List<GraduaitionProjectITI.Models.Entity.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link rel="stylesheet" href="~/css/Cart.css" />
